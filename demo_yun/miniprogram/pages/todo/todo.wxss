.top{
  position: fixed;
  top: 0;
  z-index: 2;
  background-color: #f8f8f8
}
.touch-item {
  /* font-size: 1em; */
  /* height: 100rpx; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
   /* padding: 10px; */
  /* line-height: 22px;  */
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  display: flex;
}

.del {
  background-color: orangered;
  width: 180rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  margin-left: 15px
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}