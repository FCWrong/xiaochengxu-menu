/* pages/menu/menu.wxss */
.page-discovery .search-bar {
  padding: 10rpx 20rpx;
  background-color: #f2f2f2;
}
.page-discovery .content {
  display: flex;
  flex: 1;
}
.search-bar .search-radius {
  background-color: #fff;
  border-radius: 1em;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: .8em;
  color: #888;
  padding: .3em 0;
}
.search-bar .search-radius text {
  margin-left: .5em;
}
.layers-title-view{
  background-color: #ffffff;
  
}
.layers-title{
  font-size: .8em;
  color: #888;
  margin-left: .8em;
}
.layers-view{
  background-color: #f2f2f2;
}

.view-temp{
  margin: 16px;
  padding: 4px;
  
  background-color: #e7e7e7;
  width: 104px;
  height: 104px;
  object-fit: contain;
  
  box-shadow:
    inset 0 5px white, 
    inset 0 -5px #bbb,
    inset 5px 0 #d7d7d7, 
    inset -5px 0 #d7d7d7;
  
  border-radius: 10%;
}
/* flex布局 */
.Grid {
  display: flex;
}

/*1/3平分*/
.Grid-cell {
  flex: 1;
  height: 30px;
  line-height: 30px;
  background-color: #efefef;
  text-align: center;
  margin: 2px 2px;
}
.Grid-cell-font{
  font-size: .7em;
}