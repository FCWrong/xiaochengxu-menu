.page-discovery .search-bar {
  padding: 10rpx 20rpx;
  background-color: #f2f2f2;
}
.page-discovery .content {
  display: flex;
  flex: 1;
}
.search-bar .search-radius {
  background-color: #fff;
  border-radius: 1em;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: .8em;
  color: #888;
  padding: .3em 0;
}
.search-bar .search-radius text {
  margin-left: .5em;
}
.layers-title-view{
  background-color: #ffffff;
}
.layers-title{
  font-size: .8em;
  color: #888;
  margin-left: .8em;
}
.layers-view{
  background-color: #f2f2f2;
}

.container{
        width: 100%;
        height: 400px;
        background-color: #ccc;
        display: flex;
        flex-wrap: wrap;
        align-content: center;
        align-items:center;
}

.row{
  display:flex;
  flex-basis: 100%;
  justify-content:center;
  align-items:center;
}
.item{
  width: 50%;
  height:100px;
  align-self:center;
}