/* pages/info/info.wxss */
.info-title{
  width: 100%;
  height: 300px; 
  background-color: #fefefe;
  align-items: center;
  text-align: center;
  margin-bottom: 10px;
}
.info-title-image{
  width: 100%;
  height: 250px;
}
.info-title-text{
  font-size: 1.3em;
  font-weight: bold;
  /* color: #888; */
}
.info-yongliao{
  width: 100%;
  background-color: #fefefe;
}
.info-yongliao-title{
  font-size: .9em;
  font-weight: bold;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 20px;
}
.info-yongliao-des{
  width: 91%; 
  font-size: .8em;
  color: #888;
  padding-top: 6px;
  padding-bottom: 6px;
  padding-left: 20px;
}

.info-yongliao-list{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.info-yongliao-item{
  width: 90%;
}
.info-yongliao-item-xian{
  height: 1px;
  width: 100%;
  background-color: #eee;
  margin: 5px;
}
.info-yongliao-item-item{
  display: flex;
  flex-direction: row;
}
.info-yongliao-item-name{
  flex: 1.5;
  font-size: .8em;
  padding-left: 15%;
  width: 50%;
  color: #888;
}
.info-yongliao-item-count{
  flex: 1;
  font-size: .8em;
  color: #888;
}
.info-yongliao-step-list{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.info-yongliao-step{
  width: 85%;
}
.info-yongliao-step-label{
  font-size: .8em;
  color: #888;
}
.info-yongliao-step-image{
  width: 100%;
  height: 200px;

}
